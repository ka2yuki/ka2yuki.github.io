<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>MyProtpolio</title>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
      integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
      crossorigin="anonymous"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/fullPage.js/2.8.7/jquery.fullPage.css"
      rel="stylesheet"
      type="text/css"
    />
    <link rel="stylesheet" href="assets/css/style.css" />
    <script src="https://unpkg.com/ityped@1.0.2"></script>
  </head>
  <body>
    <div id="fullpage">
      <!-- Sec1 -->
      <div class="section" id="section0">
        <video id="myVideo" loop muted data-autoplay>
          <source src="assets/flowers.mp4" type="video/mp4" />
        </video>
        <div class="layer" id="app" style="display: flex; align-items: center;">
          <h1><span id="ityped" class="ityped-cursor text-white"></span></h1>
        </div>
      </div>

      <!-- Tutorials and Books -->
      <div class="section d-flex flex-row" id="section1">
        <h1 class="sectionTitle">Tutorials & Books & Movies</h1>
        <div class="d-flex flex-row row con">
          <div class="card border-info mb-3 col-sm" style="max-width: 18rem;">
            <div class="card-header">Vue.js</div>
            <div class="card-body">
              <h5 class="card-title">Shopping Cart</h5>
              <a
                name=""
                id=""
                class="btn btn-primary"
                href="./vuejs"
                role="button"
                target="_black"
                >Link</a
              >
              <!-- <p class="card-text">.</p> -->
              <div>
                <span class="text-dark">4/May/2019</span>
              </div>
            </div>
          </div>

          <div
            class="card border-primary mb-3 mx-3 col-sm"
            style="max-width: 18rem;"
          >
            <div class="card-header">Angular2</div>
            <div class="card-body text-primary">
              <!-- <h5 class="card-title">Primary card title</h5> -->
              <!-- <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p> -->
              <a
                href="https://angular2v5-tutorial.herokuapp.com/"
                target="_brank"
              >
                Angular2 Link</a
              >
            </div>
          </div>
          <!-- Someting -->
          <div
            class="card border-secondary mb-3 mr-3 col-sm"
            style="max-width: 18rem;"
          >
            <div class="card-header">Swift</div>
            <img src="assets/janken.gif" class="card-img-top" alt="..." />
            <div class="card-body text-secondary"></div>
          </div>
          <div
            class="card border-success mb-3 col-sm"
            style="max-width: 18rem;"
          >
            <div class="card-header">Rails.v4</div>
            <div class="card-body text-success">
              <a href="https://safe-inlet-76266.herokuapp.com/" target="_brank"
                >Link</a
              >
            </div>
          </div>
        </div>
        <div class="row con">
          <h3>非掲載</h3>
          <!-- Tabl -->
          <table class="table">
            <thead>
              <tr>
                <th scope="col">No</th>
                <th scope="col">使用したもの</th>
                <th scope="col">内容</th>
                <th scope="col">件数</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <th scope="row">1</th>
                <td>wordpress</td>
                <td>コーポレートサイト</td>
                <td>6</td>
              </tr>
              <tr>
                <th scope="row">2</th>
                <td>Rails</td>
                <td>帳票管理システム、スキャンシステム</td>
                <td>..etc</td>
              </tr>
              <tr>
                <th scope="row">3</th>
                <td>Node.js</td>
                <td>LINE Messaging API</td>
                <td>1</td>
              </tr>
            </tbody>
          </table>

          <div class="col-sm mt-3"></div>
        </div>
        <button class="btn btn-primary d-block mx-auto">
          <a class="text-white" href="/contact.html">コンタクト</a>
        </button>
      </div>
    </div>

    <script
      src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
      integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
      integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
      crossorigin="anonymous"
    ></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/fullPage.js/2.8.7/jquery.fullPage.js"></script>
    <script type="text/javascript">
      $(function () {
        $("#fullpage").fullpage({
          navigation: true,
          navigationPosition: "right",
          autoScrolling: false,
          fitToSection: false, // Section(content) に半端位置の際,オートフィット
          sectionsColor: ["#fff"],
          //      scrollOverflow: true
        });
      });

      ityped.init(document.querySelector("#ityped"), {
        loop: true,
        backSpeed: 10,
        backDelay: 4500,
        showCursor: false,
        strings: ["Welcome to My Site!"],
      });

      // chart
      var ctx = document.getElementById("myChart").getContext("2d");
      var data = {
        labels: ["Progate", "Dotinstall"],
        datasets: [
          {
            label: "完了数",
            data: [913, 914],
            backgroundColor: "rgba(219,39,91,0.5)",
          },
          {
            label: "完了数",
            data: [913, 914],
            backgroundColor: "rgba(39,219,91,0.5)",
            // Changes this dataset to become a line
            type: "line",
          },
        ],
      };
      var options = {
        title: {
          display: true,
          text: "Bar chart",
        },
        scales: {
          yAxes: [
            {
              ticks: {
                suggestedMax: 1000,
                suggestedMin: 0,
                stepSize: 10,
                callback: function (value, index, values) {
                  return value + " 本";
                },
              },
            },
          ],
        },
      };
      var mixedChart = new Chart(ctx, {
        type: "bar",
        data: data,
        options: options,
      });
    </script>
  </body>
</html>
